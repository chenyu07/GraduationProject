    Layout = null;
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://cdn.bootcss.com/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" rel="stylesheet">

    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.js"></script>
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <link href="~/css/bootstrap-table.css" rel="stylesheet" />
    <script src="~/js/bootstrap-table.js"></script>
    <script src="~/js/bootstrap-table-zh-CN.js"></script>
</head>
<body>
    <div class="header">

    </div>
    <div class="header-left">
        <span>四川・达州|银税互动服务平台</span>
    </div>
    <div class="header-right">
        <input id="userName" type="text" value="欢迎您,陈宇" style="background-color: transparent;color:white;font-size:20px;border:0;width:140px" />
    </div>
    <img src="~/img/tc.png" style="margin-top:-20px;margin-left:1630px" />
    <img src="~/img/login-left.png" style="margin-top:100px;"/>
    <div style="margin-left:1200px;background-color:rgba(51, 121, 183, 1);width:400px;margin-top:-350px">&nbsp;</div>
    <div class="panel panel-default" style="width:400px;margin-left:1200px;margin-top:-1px;">
        <div class="panel panel-body">
            <form action="/Login/Login" method="post">
                <div class="form-group mb-lg">
                    <label>用户名</label>
                    <div class="input-group input-group-icon">
                        <input name="username" type="text" class="form-control input-lg" />
                        <span class="input-group-addon">
                            <span class="icon icon-lg">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                        </span>
                    </div>
                </div>

                <div class="form-group mb-lg">
                    <div class="clearfix">
                        <label class="pull-left">密码</label>
                        <a href="pages-recover-password.html" class="pull-right"></a>
                    </div>
                    <div class="input-group input-group-icon">
                        <input name="pwd" type="password" class="form-control input-lg" />
                        <span class="input-group-addon">
                            <span class="icon icon-lg">
                                <i class="glyphicon glyphicon-lock"></i>
                            </span>
                        </span>
                    </div>
                </div>
                <div class="form-group mb-lg">
                    <div class="input-group input-group-icon">
                        <button type="submit" class="btn btn-primary" style="width:100px;margin-left:60px">注册</button>
                        <button type="submit" class="btn btn-primary" style="width:100px;margin-left:50px">登录</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>

</html>
